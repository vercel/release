{
  "name": "release",
  "version": "6.3.0",
  "description": "Generate changelogs with a single command",
  "scripts": {
    "test": "yarn lint",
    "lint": "zeit-eslint --ext .jsx,.js .",
    "lint-staged": "git diff --diff-filter=ACMRT --cached --name-only '*.js' '*.jsx' | xargs zeit-eslint"
  },
  "files": [
    "bin",
    "lib"
  ],
  "repository": "vercel/release",
  "keywords": [
    "github",
    "releases",
    "cli",
    "tags",
    "push"
  ],
  "author": "leo",
  "license": "MIT",
  "bin": {
    "release": "./bin/release.js"
  },
  "devDependencies": {
    "@zeit/eslint-config-node": "0.2.13",
    "@zeit/git-hooks": "0.1.4",
    "eslint": "4.19.1"
  },
  "dependencies": {
    "@octokit/rest": "15.2.6",
    "args": "4.0.0",
    "async-retry": "1.2.1",
    "capitalize": "1.0.0",
    "chalk": "2.4.0",
    "configstore": "3.1.2",
    "delay": "4.3.0",
    "escape-goat": "1.3.0",
    "fs-extra": "5.0.0",
    "git-repo-name": "0.6.0",
    "git-spawned-stream": "1.0.0",
    "git-state": "4.0.0",
    "git-username": "1.0.0",
    "github-username": "4.1.0",
    "inquirer": "5.2.0",
    "node-fetch": "2.6.1",
    "node-version": "1.1.3",
    "opn": "5.4.0",
    "ora": "2.0.0",
    "random-string": "0.2.0",
    "semver": "5.5.0",
    "tagged-versions": "1.3.0",
    "update-check": "1.3.2"
  },
  "eslintConfig": {
    "extends": [
      "@zeit/eslint-config-node"
    ]
  },
  "git": {
    "pre-commit": "lint-staged"
  }
}
